@section scripts {
    <script>
        //*******AJAX********//
        //the notification (message content) will show info about messages being sent and if they were successful
        //jQuery AJAX will:
        //--call the POST AJAX Create from the Home Controller
        //--pass json data from the form
        //--on success:
        //      **notify the user that their message was sent. That notification will only show for 5 seconds
        //      **reset our contact form
        //on failure:
        //      **notify the user of the error

        $("#ContactCreateForm").submit(function (e) {
            var formData = $(this).serializeArray();
            e.preventDefault();
            $("#MessageContent").html("<div class='alert alert-info'> Please wait while your message is sent...</div>");
            $.ajax({
                url: "@Url.Action("ContactAjax", "Home")",
                type: "POST",
                data: formData,
                dataType: "json",
                success: function (data) {
                    $("#MessageContent").hide();
                    $("#contactConfirmation").load('@Url.Action("ContactConfirmation", "Home")', { name: data.Name, email: data.Email }).show();
                    $("#ContactCreateForm")[0].reset();
                    setTimeout(function () {
                        $("contactConfirmation").fadeToggle("slow");
                    }, 5000)
                },
                error: function (e) {
                    $("#MessageContent").html(
                        "<div class='alert alert-warning'>There was an error. Please try again later or contact the site admin.</div>"
